<!--miniprogram/pages/friendList/friendList.wxml-->
<view class="friendList">
  <text>好友列表:</text>
  <navigator wx:for="{{friendList}}" wx:key="*this" url="{{'/pages/detail/detail?userId=' + item._id}}" open-type="navigate">
    <view class="friendList-item">
      <view>
        <image src="{{item.userPhoto}}"></image>
        <text>{{item.nickName}}</text>
      </view>
      <text class="iconfont icon-small-arrow-right"></text>
    </view>
  </navigator>
</view>